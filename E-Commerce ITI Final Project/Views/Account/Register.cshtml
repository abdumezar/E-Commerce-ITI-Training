@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form method="post" asp-action="RegisterForm" asp-controller="Account" class="text-dark">
    <h3>@ViewData["Title"] Here</h3>

    <partial name="_RegisterEditAccountPartialView" model="Model" />

    <div class="form-floating my-4">
        <input class="form-control" value="@Model?.Password" asp-for="Password">
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" value="@Model?.ConfirmPassword" asp-for="ConfirmPassword">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100 py-3">Register</button>
    <p class="py-2">do you have account? <a asp-action="Login">Login Now!</a> </p>
</form>
